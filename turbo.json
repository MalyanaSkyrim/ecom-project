{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalDependencies": [".env", "pnpm-lock.yaml"],
  "globalEnv": [
    "API_URL",
    "NODE_ENV",
    "DATABASE_URL",
    "TEST_DATABASE_URL",
    "REDIS_URL",
    "SKIP_ENV_VALIDATION",
    "API_KEY",
    "GOOGLE_CLIENT_ID",
    "GOOGLE_CLIENT_SECRET",
    "NEXTAUTH_URL",
    "NEXTAUTH_SECRET",
    "PRISMA_VERBOSE"
  ],
  "tasks": {
    "db:generate": {
      "inputs": ["prisma/schema.prisma"],
      "cache": false
    },
    "db:push:test": {
      "inputs": ["prisma/schema.prisma"],
      "cache": false,
      "env": ["TEST_DATABASE_URL", "DATABASE_URL"]
    },
    "build": {
      "dependsOn": ["^build", "db:generate", "^db:generate"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [
        "build/**",
        "dist/**",
        ".next/**",
        "!.next/cache/**",
        ".docusaurus/**"
      ],
      "outputLogs": "full"
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "typecheck": {
      "dependsOn": ["db:generate", "^typecheck"]
    },
    "test": {
      "dependsOn": ["^db:push:test"],
      "cache": false,
      "outputs": ["coverage/**"]
    },
    "dev": {
      "dependsOn": ["^db:generate", "^build"],
      "persistent": true,
      "cache": false
    },
    "start": {
      "cache": false
    }
  }
}
