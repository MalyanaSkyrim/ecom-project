{
  "extends": "@ecom/config/typescript/nextjs.json",
  "compilerOptions": {
    "strict": true,
    "strictNullChecks": true,
    "allowArbitraryExtensions": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@ecom/ui/*": ["../../packages/ui/src/*"],
      "@ecom/ui": ["../../packages/ui/src/index.ts"],
      "@ecom/ui/hooks": ["../../packages/ui/src/hooks/index.ts"],
      "@/server/*": ["./server/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "global.d.ts",
    "types/**/*.d.ts",
    "types/**/*.ts",
    "next-env.d.ts",
    "next.config.mjs",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
