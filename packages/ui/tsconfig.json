{
  "extends": "@ecom/config/typescript/react-library.json",
  "compilerOptions": {
    //"outDir": "dist"
    "baseUrl": ".",
    "paths": {
      "@ecom/ui": ["./src/index.ts"],
      "@ecom/ui/*": ["./src/*"],
      "@ecom/ui/hooks": ["./src/hooks/index.ts"]
    },
    "jsx": "react"
  },
  "include": ["src/**/*"], // Matches all files in `src` and its subdirectories
  "exclude": ["node_modules", "dist"] // Avoid excluding everything with "./*"
}
